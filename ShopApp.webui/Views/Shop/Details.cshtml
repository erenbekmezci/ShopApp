@model ProductDetailModel




<div class="row">
    <div class="col-md-3">
        <img src="~/img/@Model.Product.ImageUrl" class="img-fluid">
    </div>
    <div class="col-md-9">

        <h1 class="mb-3">@Model.Product.Name</h1> <hr />

        @foreach (var item in Model.Categories)
        {
            <a asp-controller="shop" 
            asp-action="List" 
            asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name</a>
        }




        <div class="mb-3">
            
            <h4 class="text-primary mb-3"><i class="fas fa-lira-sign"></i> @Model.Product.Price</h4>
            <form class="form-inline" method="post" asp-action="AddToCart" asp-controller="Cart" >
                <input type="hidden" name="productId" value="@Model.Product.ProductId" />
                <div class="input-group mb-3">
                    <input style="width:100px;" type="number" name="quantity" class="form-control" value="1" min="1" step="1" />
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-cart-plus"></i>Add to Cart
                        </button>
                    </div>
                </div>
                
            </form>

        </div>


    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p class="p-3">@Model.Product.Description</p>
    </div>
</div>
