@model List<Category>

<div class="row">
    <div class="col-md-12">
        <h1>Admin Category</h1>
        <hr />
        <a href="/admin/categories/create" class="btn btn-primary">Add Category</a><br />

        <table class="table table-bordered">
            <thead>
                <tr>
                    <td style="width : 30px;">Id</td>
                    <td>Name</td>
                    <td>Url</td>

                    <td style="width : 135px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.Name</td>
                            <td>@item.Url</td>
                            <td>
                                <a href="/admin/categories/@item.CategoryId" class="btn btn-primary btn-sm mr-2">Edit</a>

                                <form style="display : inline;" method="post" asp-controller="Admin" asp-action="DeleteCategory">
                                    <input type="hidden" name="categoryId" value="@item.CategoryId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>



                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td class="alert alert-warning" colspan="4">
                            <h3>No Categories</h3>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>